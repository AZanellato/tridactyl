{

  "manifest_version": 2,
  "name": "Tridactyl",
  "version": "1.0",

  "background" : {
    "scripts": ["header.js", "commands.js", "internals.js", "parsers.js", "main.js"]
  },

  "content_scripts": [
      {
          "matches":["<all_urls>"],
          "js":["header.js", "messaging.js", "content.js", "link_hinting.js"]
      }
  ],

  "permissions": [
      "activeTab",
      "alarms",
      "bookmarks",
      "contextMenus",
      "cookies",
      "downloads",
      "downloads.open",
      "history",
      "identity",
      "idle",
      "management",
      "nativeMessaging",
      "notifications",
      "sessions",
      "storage",
      "tabs",
      "topSites",
      "webNavigation",
      "webRequest",
      "webRequestBlocking",
      "<all_urls>"
    ],

    "applications": {
      "gecko": {
        "id": "tridactyl@cmcaine.co.uk"
      }
    }

}
